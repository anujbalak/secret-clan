<%- include ('../partials/header', { title: 'Member'}) %> 
    <main class="member">
        <% if (locals.currentUser) { %>
            <form action="/member" method="post">
                <% if (!currentUser.member) {%>
                    <label for="member">Enter membership secret code</label>
                    <input type="text" name="member" id="member" placeholder="...secret code">  
                    <p onclick="(e) => {e.classlist.add('hide')}" class="error">code is always <code class="secret-code">warrior cat</code></p>  
                <% } %>  
                <% if (!currentUser.admin) {%>
                    <div class="admin-container">
                    <p>Become an admin</p>
                    <div class="checkbox-wrapper-44 checkbox-container">
                        <label class="toggleButton">
                          <input type="checkbox" name="admin" id="admin" value='true'>
                          <div>
                            <svg viewBox="0 0 44 44">
                              <path d="M14,24 L21,31 L39.7428882,11.5937758 C35.2809627,6.53125861 30.0333333,4 24,4 C12.95,4 4,12.95 4,24 C4,35.05 12.95,44 24,44 C35.05,44 44,35.05 44,24 C44,19.3 42.5809627,15.1645919 39.7428882,11.5937758" transform="translate(-2.000000, -2.000000)"></path>
                            </svg>
                          </div>
                        </label>
                      </div>
                    </div>
                <% } %>  
                <%- include('../partials/button', {
                    btnType: 'submit',
                    btnLabel: 'Become the sorcerer'
                }) %>
            </form>
        <% } else { %>
            <section>
                <p>You need to login first</p>
                <a href="/login">Login</a>
            </section>
        <% } %>   
    </main>
<%- include ('../partials/footer') %>